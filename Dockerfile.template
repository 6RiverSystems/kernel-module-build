FROM resin/%%RESIN_MACHINE_NAME%%-debian:jessie

RUN apt-get update && apt-get install -y curl wget build-essential libelf-dev python3-pip && pip3 install awscli --upgrade --user
COPY . /usr/src/app
WORKDIR /usr/src/app

ENV VERSION '2.29.0+rev1.prod'
RUN ./build.sh %%RESIN_MACHINE_NAME%% $VERSION example_module

CMD ./run.sh
